# Set command prompt
PS1='$ '

# Better ls
alias ll='ls -l'

alias grep='grep --color=auto'

# Edit aliases shortcut
alias eba='vim ~/.bash_aliases'
alias sba='source ~/.bash_aliases'

# Installation
alias ag='sudo apt-get'
alias agsearch='apt-cache search'
alias aginstall='sudo apt-get install'

# Git Stuff
alias glog='git log --graph --abbrev-commit --decorate'
alias gco='git checkout'
alias gdev='git checkout develop'
alias gnb='git checkout -b'
alias gb='git branch'
alias gp='git push'
alias gm='git merge'
alias gd='git diff'
alias gcp='git cherry-pick'

# Open PDFs easier
alias pdf='evince'

# Django
alias dj='python manage.py'

alias android-studio='/usr/local/android-studio/bin/studio.sh'

alias rb='ruby'

alias hydev='~/dev/music/hydrogen/build/src/gui/hydrogen -VInfo'


alias dwarf-fortress='~/games/df_linux/df'
